<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationpagetwo">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="3000sp"
        android:layout_height="100sp"
        android:text="Let's Answer a Few Quick Questions"
        android:layout_marginTop="19dp"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        />
		
	<TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:text="First Name"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/firstName"
        android:layout_toLeftOf="@+id/firstName" />
		
	<EditText
        android:id="@+id/firstName"
        android:layout_width="150sp"
        android:layout_height="46sp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@+id/textview8"/>	
	
	<TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:text="Last Name"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/lastName"
        android:layout_toLeftOf="@+id/lastName" />
		
	<EditText
        android:id="@+id/lastName"
        android:layout_width="150sp"
        android:layout_height="46sp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="text"
        android:layout_alignTop="@+id/firstName"
		android:layout_toRightof="@+id/firstName" />
		
	<Spinner
        android:id="@+id/gender"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/firstName"
        android:layout_centerHorizontal="true"
        android:entries="@array/gender_identity"/>	

    <EditText
        android:id="@+id/age"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/gender"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/age"
        android:layout_toLeftOf="@+id/age" />

    <EditText
        android:id="@+id/userWeight"
        android:layout_width="150sp"
        android:layout_height="46sp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/age"
        android:layout_toRightOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:text="Weight"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/userWeight"
        android:layout_alignRight="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lbs"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_alignTop="@+id/userWeight"
        android:layout_toRightOf="@+id/userWeight" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/heightFT"
        android:layout_toLeftOf="@+id/heightFT"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/heightFT"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/userWeight"
        android:layout_alignLeft="@+id/editText2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ft"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/heightFT"
        android:layout_toRightOf="@+id/heightFT" />

    <EditText
        android:id="@+id/heightIN"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/userWeight"
        android:layout_toRightOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/heightIN"
        android:layout_toRightOf="@+id/heightIN"
        android:text="in"
        android:textSize="32sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/next_bttn"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightFT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Next"
        android:textSize="20sp"/>

</RelativeLayout>
