<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrationpagetwo">

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:entries="@array/gender_identity"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="3000sp"
        android:layout_height="100sp"
        android:text="Let's Answer a Few Quick Questions"
        android:layout_marginTop="19dp"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150sp"
        android:layout_height="46sp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="110sp"
        android:layout_height="40sp"
        android:text="Weight"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"

        android:layout_alignTop="@+id/editText3"
        android:layout_alignRight="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lbs"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_alignTop="@+id/editText3"
        android:layout_toRightOf="@+id/editText3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/editText4"
        android:layout_toLeftOf="@+id/editText4"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText2" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ft"
        android:textSize="32sp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/editText4"
        android:layout_toRightOf="@+id/editText4" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="60sp"
        android:layout_height="46sp"
        android:ems="10"
        android:inputType="number"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/editText3"
        android:layout_toRightOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText9"
        android:layout_toRightOf="@+id/editText9"
        android:text="in"
        android:textSize="32sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/next_bttn"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Next"
        android:textSize="20sp"/>

</RelativeLayout>
