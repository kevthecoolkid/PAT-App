<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerpagepic">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"

        android:text="Username"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Sign Up to Become Part of the PAT Fitness Family"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/gray"
        android:gravity="center" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:text="Email Address"/>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText6"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/editText7" />

    <Button
        android:id="@+id/continue_reg_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="Continue Registration" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="90sp"
        android:layout_height="22sp"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textSize="20sp"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/editText7"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="170sp"
        android:layout_height="22sp"
        android:layout_marginTop="17dp"
        android:text="Re-Enter Password"
        android:textSize="20sp"
        android:layout_below="@+id/editText7"
        android:layout_alignLeft="@+id/editText8"
        android:textColor="#ffffff"/>

</RelativeLayout>
